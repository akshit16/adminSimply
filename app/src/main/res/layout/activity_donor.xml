<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simplyblood.admin.simplyblood.donor"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Spinner
        android:layout_height="wrap_content"
        android:dropDownWidth="200dp"
        android:layout_marginTop="24dp"
        android:entries="@array/blood_group"
        android:prompt="@string/Blood_Group"
        android:popupBackground="#D0D3D4"
        android:id="@+id/spinner2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="210dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/editText30"
        android:layout_below="@+id/spinner2"
        android:layout_centerHorizontal="true"
        android:hint="Blood Units" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/editText31"
        android:layout_below="@+id/editText30"
        android:layout_alignLeft="@+id/editText30"
        android:layout_alignStart="@+id/editText30"
        android:hint="Contact Person Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText32"
        android:layout_alignRight="@+id/editText32"
        android:layout_alignEnd="@+id/editText32"
        android:layout_marginTop="28dp"
        android:id="@+id/editText33"
        android:hint="Flat/House no." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText33"
        android:layout_alignLeft="@+id/editText33"
        android:layout_alignStart="@+id/editText33"
        android:layout_marginTop="29dp"
        android:id="@+id/editText34"
        android:hint="Street/Colony Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText32"
        android:hint="Contact Person Number"
        android:layout_below="@+id/editText31"
        android:layout_alignLeft="@+id/editText31"
        android:layout_alignStart="@+id/editText31"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText35"
        android:hint="Country"
        android:layout_below="@+id/editText34"
        android:layout_alignLeft="@+id/editText34"
        android:layout_alignStart="@+id/editText34"
        android:layout_marginTop="24dp"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:text="India" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText36"
        android:hint="State"
        android:layout_below="@+id/editText35"
        android:layout_alignLeft="@+id/editText35"
        android:layout_alignStart="@+id/editText35"
        android:layout_marginTop="24dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText37"
        android:hint="City(eg : Mumbai)"
        android:layout_below="@+id/editText36"
        android:layout_alignLeft="@+id/editText36"
        android:layout_alignStart="@+id/editText36"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Search Donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button13"
        style="@android:style/Widget.Button"
        android:onClick="searchD"
        android:layout_marginLeft="110dp"
        android:layout_below="@+id/editText38"

        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText38"
        android:hint="Pincode"
        android:layout_below="@+id/editText37"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:layout_marginTop="22dp" />
</RelativeLayout>
</ScrollView>
