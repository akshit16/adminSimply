<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simplyblood.admin.simplyblood.login"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/blood_group"
            android:prompt="@string/Blood_Group"
            android:popupBackground="#606060"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/editText19"
            android:layout_alignStart="@+id/editText19"
            android:layout_marginTop="26dp"
            android:layout_alignRight="@+id/editText19"
            android:layout_alignEnd="@+id/editText19" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Flat/House No."
            android:textColorHint="#606060"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_below="@+id/spinner"
            android:layout_alignLeft="@+id/spinner"
            android:layout_alignStart="@+id/spinner"
            android:layout_marginTop="24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Street/Colony name"
            android:textColorHint="#606060"
            android:ems="10"
            android:id="@+id/editText11"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/editText8"
            android:layout_alignLeft="@+id/editText8"
            android:layout_alignStart="@+id/editText8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="India"
            android:hint="Country"
            android:textColorHint="#606060"
            android:ems="10"

            android:id="@+id/editText15"
            android:layout_below="@+id/editText11"
            android:layout_alignLeft="@+id/editText11"
            android:layout_alignStart="@+id/editText11"
            android:layout_marginTop="23dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="State"
            android:textColorHint="#606060"
            android:ems="10"
            android:layout_marginTop="17dp"
            android:id="@+id/editText16"
            android:layout_below="@+id/editText15"
            android:layout_alignLeft="@+id/editText15"
            android:layout_alignStart="@+id/editText15" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="City(eg : Mumbai)"
            android:textColorHint="#606060"
            android:ems="10"

            android:id="@+id/editText17"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/editText16"
            android:layout_alignLeft="@+id/editText16"
            android:layout_alignStart="@+id/editText16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Emergency Contact No."
            android:textColorHint="#606060"
            android:id="@+id/editText19"

            android:layout_above="@+id/editText20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:hint="ImportantDate"
            android:textColorHint="#606060"
            android:id="@+id/editText20"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/editText19"
            android:layout_alignStart="@+id/editText19" />

        <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="updateInfo"
            android:layout_below="@+id/editText19"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            style="@android:style/Widget.Button" />

        <Button
            android:text="D"
            android:id="@+id/button14"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp" />

    </RelativeLayout>
</ScrollView>
